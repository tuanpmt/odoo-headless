<% if (pagination.pages > 1) { %>
<div class="flex items-center justify-between mt-4 px-1">
  <div class="text-sm text-gray-500">
    Hiển thị <%= (pagination.page-1)*pagination.limit+1 %>–<%= Math.min(pagination.page*pagination.limit, pagination.total) %> / <%= pagination.total %>
  </div>
  <div class="flex gap-1">
    <% for (let i = 1; i <= pagination.pages; i++) { %>
      <a href="?<%= Object.entries({...filters, page: i}).filter(([k,v])=>v).map(([k,v])=>`${k}=${encodeURIComponent(v)}`).join('&') %>"
         class="px-3 py-1 text-sm rounded-lg <%= i === pagination.page ? 'bg-indigo-600 text-white' : 'bg-white border text-gray-700 hover:bg-gray-50' %>">
        <%= i %>
      </a>
    <% } %>
  </div>
</div>
<% } %>
