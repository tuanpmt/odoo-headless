<%- include('../../partials/layout') %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Liên hệ</h1>
  <a href="/contacts/create" class="bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-indigo-700">
    <i class="fas fa-plus mr-1"></i> Thêm liên hệ
  </a>
</div>

<div class="bg-white rounded-xl shadow-sm border p-4 mb-4">
  <form method="GET" class="flex flex-wrap gap-3 items-end">
    <div class="flex-1 min-w-[200px]">
      <label class="block text-xs text-gray-500 mb-1">Tìm kiếm</label>
      <input type="text" name="search" value="<%= filters.search || '' %>" placeholder="Tên, email, SĐT, thành phố..."
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-xs text-gray-500 mb-1">Loại</label>
      <select name="type" class="px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
        <option value="">Tất cả</option>
        <option value="company" <%= filters.type === 'company' ? 'selected' : '' %>>Công ty</option>
        <option value="contact" <%= filters.type === 'contact' ? 'selected' : '' %>>Cá nhân</option>
      </select>
    </div>
    <button type="submit" class="bg-gray-800 text-white px-4 py-2 rounded-lg text-sm hover:bg-gray-700">
      <i class="fas fa-search mr-1"></i> Lọc
    </button>
    <a href="/contacts" class="text-gray-500 hover:text-gray-700 px-2 py-2 text-sm">Xóa bộ lọc</a>
  </form>
</div>

<div class="bg-white rounded-xl shadow-sm border overflow-x-auto">
  <table class="w-full text-sm">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden md:table-cell">Email</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden sm:table-cell">Điện thoại</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden lg:table-cell">Thành phố</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden lg:table-cell">Công ty</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Loại</th>
      </tr>
    </thead>
    <tbody class="divide-y">
      <% if (contacts.length === 0) { %>
        <tr><td colspan="6" class="px-4 py-8 text-center text-gray-400">Không có liên hệ nào</td></tr>
      <% } %>
      <% contacts.forEach(c => { %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-3">
            <a href="/contacts/<%= c.id %>" class="text-indigo-600 hover:underline font-medium"><%= c.name %></a>
            <% if (c.function) { %>
              <div class="text-xs text-gray-400"><%= c.function %></div>
            <% } %>
          </td>
          <td class="px-4 py-3 text-gray-600 hidden md:table-cell"><%= c.email || '-' %></td>
          <td class="px-4 py-3 text-gray-600 hidden sm:table-cell"><%= c.phone || c.mobile || '-' %></td>
          <td class="px-4 py-3 text-gray-500 hidden lg:table-cell"><%= c.city || '-' %></td>
          <td class="px-4 py-3 text-gray-500 hidden lg:table-cell"><%= c.company_name || '-' %></td>
          <td class="px-4 py-3">
            <% if (c.is_company) { %>
              <span class="bg-purple-100 text-purple-700 px-2 py-0.5 rounded-full text-xs"><i class="fas fa-building mr-1"></i>Công ty</span>
            <% } else { %>
              <span class="bg-gray-100 text-gray-600 px-2 py-0.5 rounded-full text-xs"><i class="fas fa-user mr-1"></i>Cá nhân</span>
            <% } %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../../partials/pagination') %>
<%- include('../../partials/footer') %>
