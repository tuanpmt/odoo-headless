<%- include('../../partials/layout') %>

<div class="flex items-center gap-3 mb-6">
  <a href="/contacts" class="text-gray-400 hover:text-gray-600"><i class="fas fa-arrow-left"></i></a>
  <h1 class="text-2xl font-bold text-gray-900"><%= contact ? 'Chỉnh sửa liên hệ' : 'Thêm liên hệ mới' %></h1>
</div>

<form method="POST" action="/contacts/<%= contact ? contact.id : 'create' %>" class="bg-white rounded-xl shadow-sm border p-6 max-w-3xl">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700 mb-1">Tên *</label>
      <input type="text" name="name" required value="<%= contact ? contact.name : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div class="md:col-span-2">
      <label class="flex items-center gap-2 text-sm font-medium text-gray-700">
        <input type="checkbox" name="is_company" <%= contact && contact.is_company ? 'checked' : '' %> class="rounded">
        Là công ty
      </label>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
      <input type="email" name="email" value="<%= contact ? (contact.email || '') : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Điện thoại</label>
      <input type="text" name="phone" value="<%= contact ? (contact.phone || '') : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Di động</label>
      <input type="text" name="mobile" value="<%= contact ? (contact.mobile || '') : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Chức vụ</label>
      <input type="text" name="function" value="<%= contact ? (contact.function || '') : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Địa chỉ</label>
      <input type="text" name="street" value="<%= contact ? (contact.street || '') : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Thành phố</label>
      <input type="text" name="city" value="<%= contact ? (contact.city || '') : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Website</label>
      <input type="text" name="website" value="<%= contact ? (contact.website || '') : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
  </div>
  <div class="flex gap-3 mt-6">
    <button type="submit" class="bg-indigo-600 text-white px-5 py-2 rounded-lg text-sm hover:bg-indigo-700">
      <i class="fas fa-save mr-1"></i> <%= contact ? 'Cập nhật' : 'Tạo mới' %>
    </button>
    <a href="/contacts" class="text-gray-600 hover:text-gray-800 px-4 py-2 text-sm">Hủy</a>
  </div>
</form>

<%- include('../../partials/footer') %>
