<%- include('../../partials/layout') %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">CRM - Leads & Cơ hội</h1>
  <a href="/crm/create" class="bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-indigo-700 transition-colors">
    <i class="fas fa-plus mr-1"></i> Tạo mới
  </a>
</div>

<!-- Filters -->
<div class="bg-white rounded-xl shadow-sm border p-4 mb-4">
  <form method="GET" class="flex flex-wrap gap-3 items-end">
    <div class="flex-1 min-w-[200px]">
      <label class="block text-xs text-gray-500 mb-1">Tìm kiếm</label>
      <input type="text" name="search" value="<%= filters.search || '' %>" placeholder="Tên, email, công ty..."
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-xs text-gray-500 mb-1">Giai đoạn</label>
      <select name="stage" class="px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
        <option value="">Tất cả</option>
        <% stages.forEach(s => { %>
          <option value="<%= s.id %>" <%= filters.stage == s.id ? 'selected' : '' %>><%= getStageName(s.name) %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label class="block text-xs text-gray-500 mb-1">Ưu tiên</label>
      <select name="priority" class="px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
        <option value="">Tất cả</option>
        <option value="0" <%= filters.priority === '0' ? 'selected' : '' %>>Thường</option>
        <option value="1" <%= filters.priority === '1' ? 'selected' : '' %>>Cao</option>
        <option value="2" <%= filters.priority === '2' ? 'selected' : '' %>>Rất cao</option>
        <option value="3" <%= filters.priority === '3' ? 'selected' : '' %>>Khẩn cấp</option>
      </select>
    </div>
    <button type="submit" class="bg-gray-800 text-white px-4 py-2 rounded-lg text-sm hover:bg-gray-700">
      <i class="fas fa-search mr-1"></i> Lọc
    </button>
    <a href="/crm" class="text-gray-500 hover:text-gray-700 px-2 py-2 text-sm">Xóa bộ lọc</a>
  </form>
</div>

<!-- Table -->
<div class="bg-white rounded-xl shadow-sm border overflow-x-auto">
  <table class="w-full text-sm">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tên</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden md:table-cell">Công ty</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden lg:table-cell">Email</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Giai đoạn</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ưu tiên</th>
        <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase hidden sm:table-cell">Doanh thu</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden lg:table-cell">Phụ trách</th>
      </tr>
    </thead>
    <tbody class="divide-y">
      <% if (leads.length === 0) { %>
        <tr><td colspan="7" class="px-4 py-8 text-center text-gray-400">Không có dữ liệu</td></tr>
      <% } %>
      <% leads.forEach(l => { %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-3">
            <a href="/crm/<%= l.id %>" class="text-indigo-600 hover:underline font-medium"><%= l.name %></a>
            <div class="text-xs text-gray-400 md:hidden"><%= l.partner_name || '' %></div>
          </td>
          <td class="px-4 py-3 text-gray-600 hidden md:table-cell"><%= l.partner_name || l.partner_display || '-' %></td>
          <td class="px-4 py-3 text-gray-500 hidden lg:table-cell"><%= l.email_from || '-' %></td>
          <td class="px-4 py-3">
            <% const sn = getStageName(l.stage_name);
               const sc = l.stage_id === 4 ? 'bg-green-100 text-green-700' : 'bg-blue-100 text-blue-700'; %>
            <span class="<%= sc %> px-2 py-0.5 rounded-full text-xs"><%= sn %></span>
          </td>
          <td class="px-4 py-3">
            <% const stars = parseInt(l.priority) || 0; %>
            <% for (let i = 0; i < 3; i++) { %>
              <span class="<%= i < stars ? 'text-yellow-400' : 'text-gray-200' %>"><i class="fas fa-star text-xs"></i></span>
            <% } %>
          </td>
          <td class="px-4 py-3 text-right text-gray-700 hidden sm:table-cell"><%= l.expected_revenue ? formatMoney(l.expected_revenue) + ' ₫' : '-' %></td>
          <td class="px-4 py-3 text-gray-500 hidden lg:table-cell"><%= l.user_name || '-' %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../../partials/pagination') %>
<%- include('../../partials/footer') %>
