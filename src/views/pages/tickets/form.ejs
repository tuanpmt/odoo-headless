<%- include('../../partials/layout') %>

<div class="flex items-center gap-3 mb-6">
  <a href="/tickets" class="text-gray-400 hover:text-gray-600"><i class="fas fa-arrow-left"></i></a>
  <h1 class="text-2xl font-bold text-gray-900"><%= task ? 'Chỉnh sửa Ticket #' + task.id : 'Tạo Ticket mới' %></h1>
</div>

<form method="POST" action="/tickets/<%= task ? task.id : 'create' %>" class="bg-white rounded-xl shadow-sm border p-6 max-w-3xl">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700 mb-1">Tiêu đề *</label>
      <input type="text" name="name" required value="<%= task ? task.name : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
      <select name="stage_id" class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
        <% stages.forEach(s => { %>
          <option value="<%= s.id %>" <%= task && task.stage_id == s.id ? 'selected' : '' %>><%= getStageName(s.name) %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Ưu tiên</label>
      <select name="priority" class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
        <option value="0" <%= task && task.priority === '0' ? 'selected' : '' %>>Thường</option>
        <option value="1" <%= task && task.priority === '1' ? 'selected' : '' %>>Quan trọng</option>
      </select>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Khách hàng</label>
      <select name="partner_id" class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
        <option value="">-- Chọn --</option>
        <% partners.forEach(p => { %>
          <option value="<%= p.id %>" <%= task && task.partner_id == p.id ? 'selected' : '' %>><%= p.name %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Deadline</label>
      <input type="date" name="date_deadline" value="<%= task && task.date_deadline ? new Date(task.date_deadline).toISOString().split('T')[0] : '' %>"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
      <textarea name="description" rows="4"
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none"><%= task ? (task.description || '') : '' %></textarea>
    </div>
  </div>
  <div class="flex gap-3 mt-6">
    <button type="submit" class="bg-indigo-600 text-white px-5 py-2 rounded-lg text-sm hover:bg-indigo-700">
      <i class="fas fa-save mr-1"></i> <%= task ? 'Cập nhật' : 'Tạo mới' %>
    </button>
    <a href="/tickets" class="text-gray-600 hover:text-gray-800 px-4 py-2 text-sm">Hủy</a>
  </div>
</form>

<%- include('../../partials/footer') %>
