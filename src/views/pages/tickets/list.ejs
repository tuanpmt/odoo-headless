<%- include('../../partials/layout') %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Support Tickets</h1>
  <a href="/tickets/create" class="bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-indigo-700">
    <i class="fas fa-plus mr-1"></i> Tạo ticket
  </a>
</div>

<div class="bg-white rounded-xl shadow-sm border p-4 mb-4">
  <form method="GET" class="flex flex-wrap gap-3 items-end">
    <div class="flex-1 min-w-[200px]">
      <label class="block text-xs text-gray-500 mb-1">Tìm kiếm</label>
      <input type="text" name="search" value="<%= filters.search || '' %>" placeholder="Tên ticket, khách hàng..."
        class="w-full px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
    </div>
    <div>
      <label class="block text-xs text-gray-500 mb-1">Trạng thái</label>
      <select name="stage" class="px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
        <option value="">Tất cả</option>
        <% stages.forEach(s => { %>
          <option value="<%= s.id %>" <%= filters.stage == s.id ? 'selected' : '' %>><%= getStageName(s.name) %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label class="block text-xs text-gray-500 mb-1">Ưu tiên</label>
      <select name="priority" class="px-3 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
        <option value="">Tất cả</option>
        <option value="0" <%= filters.priority === '0' ? 'selected' : '' %>>Thường</option>
        <option value="1" <%= filters.priority === '1' ? 'selected' : '' %>>Quan trọng</option>
      </select>
    </div>
    <button type="submit" class="bg-gray-800 text-white px-4 py-2 rounded-lg text-sm hover:bg-gray-700">
      <i class="fas fa-search mr-1"></i> Lọc
    </button>
    <a href="/tickets" class="text-gray-500 hover:text-gray-700 px-2 py-2 text-sm">Xóa bộ lọc</a>
  </form>
</div>

<div class="bg-white rounded-xl shadow-sm border overflow-x-auto">
  <table class="w-full text-sm">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ticket</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden md:table-cell">Khách hàng</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Trạng thái</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ưu tiên</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden sm:table-cell">Ngày tạo</th>
      </tr>
    </thead>
    <tbody class="divide-y">
      <% if (tasks.length === 0) { %>
        <tr><td colspan="6" class="px-4 py-8 text-center text-gray-400">Không có ticket nào</td></tr>
      <% } %>
      <% tasks.forEach(t => { %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-3 text-gray-400">#<%= t.id %></td>
          <td class="px-4 py-3">
            <a href="/tickets/<%= t.id %>" class="text-indigo-600 hover:underline font-medium"><%= t.name %></a>
          </td>
          <td class="px-4 py-3 text-gray-600 hidden md:table-cell"><%= t.partner_name || '-' %></td>
          <td class="px-4 py-3">
            <% const sn = getStageName(t.stage_name);
               let sc = 'bg-gray-100 text-gray-700';
               if (t.stage_id === 22 || t.stage_id === 23) sc = 'bg-green-100 text-green-700';
               else if (t.stage_id === 20) sc = 'bg-yellow-100 text-yellow-700';
               else if (t.stage_id === 21) sc = 'bg-orange-100 text-orange-700';
               else if (t.stage_id === 19) sc = 'bg-blue-100 text-blue-700';
            %>
            <span class="<%= sc %> px-2 py-0.5 rounded-full text-xs"><%= sn %></span>
          </td>
          <td class="px-4 py-3">
            <% if (t.priority === '1') { %>
              <span class="text-red-500 font-medium text-xs"><i class="fas fa-exclamation-circle mr-1"></i>Quan trọng</span>
            <% } else { %>
              <span class="text-gray-400 text-xs">Thường</span>
            <% } %>
          </td>
          <td class="px-4 py-3 text-gray-500 hidden sm:table-cell"><%= formatDate(t.create_date) %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<%- include('../../partials/pagination') %>
<%- include('../../partials/footer') %>
