<%- include('../partials/layout') %>

<h1 class="text-2xl font-bold text-gray-900 mb-6">Dashboard</h1>

<!-- Stats -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
  <div class="bg-white rounded-xl shadow-sm border p-5">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Leads/Cơ hội</p>
        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.leads %></p>
      </div>
      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
        <i class="fas fa-funnel-dollar text-blue-600 text-lg"></i>
      </div>
    </div>
  </div>
  <div class="bg-white rounded-xl shadow-sm border p-5">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Tickets hỗ trợ</p>
        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.tasks %></p>
      </div>
      <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
        <i class="fas fa-ticket-alt text-orange-600 text-lg"></i>
      </div>
    </div>
  </div>
  <div class="bg-white rounded-xl shadow-sm border p-5">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Liên hệ</p>
        <p class="text-2xl font-bold text-gray-900 mt-1"><%= stats.contacts %></p>
      </div>
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <i class="fas fa-address-book text-green-600 text-lg"></i>
      </div>
    </div>
  </div>
  <div class="bg-white rounded-xl shadow-sm border p-5">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Doanh thu kỳ vọng</p>
        <p class="text-2xl font-bold text-gray-900 mt-1"><%= formatMoney(stats.revenue) %></p>
      </div>
      <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
        <i class="fas fa-coins text-purple-600 text-lg"></i>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Leads by Stage -->
  <div class="bg-white rounded-xl shadow-sm border">
    <div class="px-5 py-4 border-b">
      <h2 class="font-semibold text-gray-900">Leads theo giai đoạn</h2>
    </div>
    <div class="p-5 space-y-3">
      <% leadsByStage.forEach(s => { %>
        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-700"><%= getStageName(s.stage_name) %></span>
          <span class="bg-indigo-100 text-indigo-700 px-2.5 py-0.5 rounded-full text-sm font-medium"><%= s.count %></span>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Recent Leads -->
  <div class="bg-white rounded-xl shadow-sm border">
    <div class="px-5 py-4 border-b flex items-center justify-between">
      <h2 class="font-semibold text-gray-900">Leads mới nhất</h2>
      <a href="/crm" class="text-sm text-indigo-600 hover:underline">Xem tất cả →</a>
    </div>
    <div class="divide-y">
      <% recentLeads.forEach(l => { %>
        <a href="/crm/<%= l.id %>" class="block px-5 py-3 hover:bg-gray-50">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-sm font-medium text-gray-900"><%= l.name %></div>
              <div class="text-xs text-gray-500"><%= l.partner_name || '-' %></div>
            </div>
            <div class="text-right">
              <span class="text-xs bg-gray-100 text-gray-700 px-2 py-0.5 rounded-full"><%= getStageName(l.stage_name) %></span>
              <% if (l.expected_revenue) { %>
                <div class="text-xs text-green-600 mt-1"><%= formatMoney(l.expected_revenue) %> ₫</div>
              <% } %>
            </div>
          </div>
        </a>
      <% }); %>
    </div>
  </div>

  <!-- Recent Tickets -->
  <div class="bg-white rounded-xl shadow-sm border lg:col-span-2">
    <div class="px-5 py-4 border-b flex items-center justify-between">
      <h2 class="font-semibold text-gray-900">Tickets gần đây</h2>
      <a href="/tickets" class="text-sm text-indigo-600 hover:underline">Xem tất cả →</a>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ticket</th>
            <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Khách hàng</th>
            <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Trạng thái</th>
            <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ưu tiên</th>
            <th class="px-5 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ngày tạo</th>
          </tr>
        </thead>
        <tbody class="divide-y">
          <% recentTickets.forEach(t => { %>
            <tr class="hover:bg-gray-50">
              <td class="px-5 py-3"><a href="/tickets/<%= t.id %>" class="text-indigo-600 hover:underline font-medium"><%= t.name %></a></td>
              <td class="px-5 py-3 text-gray-600"><%= t.partner_name || '-' %></td>
              <td class="px-5 py-3"><span class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded-full text-xs"><%= getStageName(t.stage_name) %></span></td>
              <td class="px-5 py-3">
                <% if (t.priority === '1') { %>
                  <span class="text-yellow-500"><i class="fas fa-star"></i></span>
                <% } else { %>
                  <span class="text-gray-300"><i class="far fa-star"></i></span>
                <% } %>
              </td>
              <td class="px-5 py-3 text-gray-500"><%= formatDate(t.create_date) %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
