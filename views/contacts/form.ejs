<%- include('../partials/head', { title: contact ? 'Edit Contact' : 'New Contact', pageTitle: contact ? contact.name : 'New Contact' }) %>

<div class="max-w-2xl">
  <form method="POST" action="/contacts/save" class="bg-white rounded-xl border border-gray-200 p-6 space-y-5">
    <% if (contact) { %><input type="hidden" name="id" value="<%= contact.id %>"><% } %>
    
    <div class="grid sm:grid-cols-2 gap-4">
      <div class="sm:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
        <input type="text" name="name" required value="<%= contact ? contact.name : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div class="sm:col-span-2">
        <label class="flex items-center gap-2 text-sm">
          <input type="checkbox" name="is_company" class="rounded border-gray-300 text-indigo-600" <%= contact && contact.is_company ? 'checked' : '' %>>
          <span class="font-medium text-gray-700">This is a company</span>
        </label>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" name="email" value="<%= contact ? contact.email || '' : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
        <input type="text" name="phone" value="<%= contact ? contact.phone || '' : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Mobile</label>
        <input type="text" name="mobile" value="<%= contact ? contact.mobile || '' : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Job Position</label>
        <input type="text" name="function" value="<%= contact ? contact.function || '' : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
        <input type="text" name="company_name" value="<%= contact ? contact.company_name || '' : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
        <input type="text" name="city" value="<%= contact ? contact.city || '' : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div class="sm:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-1">Street</label>
        <input type="text" name="street" value="<%= contact ? contact.street || '' : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div class="sm:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
        <textarea name="comment" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"><%= contact ? contact.comment || '' : '' %></textarea>
      </div>
    </div>

    <div class="flex gap-3 pt-2">
      <button type="submit" class="px-5 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700"><i class="fas fa-save mr-1"></i> Save</button>
      <a href="/contacts" class="px-5 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200">Cancel</a>
    </div>
  </form>
</div>

<%- include('../partials/foot') %>
