<%- include('../partials/head', { title: 'Contacts', pageTitle: 'Contacts' }) %>

<div class="space-y-4">
  <div class="flex flex-col sm:flex-row gap-3 items-start sm:items-center justify-between">
    <form class="flex gap-2 flex-1 max-w-lg" method="GET" action="/contacts">
      <input type="text" name="q" value="<%= search %>" placeholder="Search contacts..." class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      <button class="px-4 py-2 bg-gray-100 rounded-lg text-sm hover:bg-gray-200"><i class="fas fa-search"></i></button>
    </form>
    <a href="/contacts/new" class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 whitespace-nowrap"><i class="fas fa-plus mr-1"></i> New Contact</a>
  </div>

  <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="text-left px-4 py-3 font-medium text-gray-600">Name</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600 hidden sm:table-cell">Email</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600 hidden md:table-cell">Phone</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600 hidden lg:table-cell">Company</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600 hidden lg:table-cell">City</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600">Type</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% contacts.forEach(c => { %>
          <tr class="hover:bg-gray-50 cursor-pointer" onclick="location.href='/contacts/<%= c.id %>'">
            <td class="px-4 py-3">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full flex items-center justify-center text-xs font-medium <%= c.is_company ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600' %>">
                  <i class="fas <%= c.is_company ? 'fa-building' : 'fa-user' %>"></i>
                </div>
                <span class="font-medium text-gray-900"><%= c.name %></span>
              </div>
            </td>
            <td class="px-4 py-3 text-gray-600 hidden sm:table-cell"><%= c.email || '-' %></td>
            <td class="px-4 py-3 text-gray-600 hidden md:table-cell"><%= c.phone || c.mobile || '-' %></td>
            <td class="px-4 py-3 text-gray-600 hidden lg:table-cell"><%= c.company_name || '-' %></td>
            <td class="px-4 py-3 text-gray-600 hidden lg:table-cell"><%= c.city || '-' %></td>
            <td class="px-4 py-3">
              <span class="text-xs px-2 py-1 rounded-full <%= c.is_company ? 'bg-blue-50 text-blue-700' : 'bg-gray-100 text-gray-600' %>"><%= c.is_company ? 'Company' : 'Person' %></span>
            </td>
          </tr>
          <% }) %>
          <% if (!contacts.length) { %><tr><td colspan="6" class="px-4 py-8 text-center text-gray-400">No contacts found</td></tr><% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/foot') %>
