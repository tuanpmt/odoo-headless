<%- include('../partials/head', { title: 'Tickets', pageTitle: 'Support Tickets' }) %>

<div class="space-y-4">
  <div class="flex flex-col sm:flex-row gap-3 items-start sm:items-center justify-between">
    <form class="flex gap-2 flex-1 max-w-lg" method="GET" action="/tickets">
      <input type="text" name="q" value="<%= search %>" placeholder="Search tickets..." class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      <button class="px-4 py-2 bg-gray-100 rounded-lg text-sm hover:bg-gray-200"><i class="fas fa-search"></i></button>
    </form>
    <a href="/tickets/new" class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 whitespace-nowrap"><i class="fas fa-plus mr-1"></i> New Ticket</a>
  </div>

  <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="text-left px-4 py-3 font-medium text-gray-600">ID</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600">Title</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600 hidden sm:table-cell">Contact</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600">Stage</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600 hidden md:table-cell">Priority</th>
            <th class="text-left px-4 py-3 font-medium text-gray-600 hidden lg:table-cell">Deadline</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% tasks.forEach(t => { %>
          <tr class="hover:bg-gray-50 cursor-pointer" onclick="location.href='/tickets/<%= t.id %>'">
            <td class="px-4 py-3 text-gray-500">#<%= t.id %></td>
            <td class="px-4 py-3 font-medium text-gray-900"><%= t.name %></td>
            <td class="px-4 py-3 text-gray-600 hidden sm:table-cell"><%= t.partner_name || '-' %></td>
            <td class="px-4 py-3"><span class="text-xs px-2 py-1 rounded-full bg-purple-50 text-purple-700"><%= parseName(t.stage_name) %></span></td>
            <td class="px-4 py-3 hidden md:table-cell">
              <% if (t.priority === '1') { %><span class="text-xs px-2 py-1 rounded-full bg-yellow-50 text-yellow-700"><i class="fas fa-star mr-1"></i>Urgent</span>
              <% } else { %><span class="text-xs text-gray-400">Normal</span><% } %>
            </td>
            <td class="px-4 py-3 text-gray-600 hidden lg:table-cell"><%= t.date_deadline ? new Date(t.date_deadline).toLocaleDateString() : '-' %></td>
          </tr>
          <% }) %>
          <% if (!tasks.length) { %><tr><td colspan="6" class="px-4 py-8 text-center text-gray-400">No tickets found</td></tr><% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/foot') %>
