<%- include('../partials/head', { title: task ? 'Edit Ticket' : 'New Ticket', pageTitle: task ? '#' + task.id + ' ' + task.name : 'New Ticket' }) %>

<div class="max-w-2xl">
  <form method="POST" action="/tickets/save" class="bg-white rounded-xl border border-gray-200 p-6 space-y-5">
    <% if (task) { %><input type="hidden" name="id" value="<%= task.id %>"><% } %>
    
    <div class="grid sm:grid-cols-2 gap-4">
      <div class="sm:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-1">Title *</label>
        <input type="text" name="name" required value="<%= task ? task.name : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Stage</label>
        <select name="stage_id" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm bg-white focus:ring-2 focus:ring-indigo-500">
          <% stages.forEach(s => { %><option value="<%= s.id %>" <%= task && task.stage_id == s.id ? 'selected' : '' %>><%= parseName(s.name) %></option><% }) %>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Priority</label>
        <select name="priority" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm bg-white focus:ring-2 focus:ring-indigo-500">
          <option value="0" <%= (!task || task.priority==='0') ? 'selected' : '' %>>Normal</option>
          <option value="1" <%= task && task.priority==='1' ? 'selected' : '' %>>Urgent</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Contact</label>
        <select name="partner_id" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm bg-white focus:ring-2 focus:ring-indigo-500">
          <option value="">-- None --</option>
          <% partners.forEach(p => { %><option value="<%= p.id %>" <%= task && task.partner_id == p.id ? 'selected' : '' %>><%= p.name %></option><% }) %>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Deadline</label>
        <input type="date" name="date_deadline" value="<%= task && task.date_deadline ? new Date(task.date_deadline).toISOString().split('T')[0] : '' %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
      </div>
      <div class="sm:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
        <textarea name="description" rows="5" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"><%= task ? task.description || '' : '' %></textarea>
      </div>
    </div>

    <div class="flex gap-3 pt-2">
      <button type="submit" class="px-5 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700"><i class="fas fa-save mr-1"></i> Save</button>
      <a href="/tickets" class="px-5 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200">Cancel</a>
    </div>
  </form>
</div>

<%- include('../partials/foot') %>
